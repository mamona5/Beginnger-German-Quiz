<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/paddingExtraLarge"
        android:layout_marginLeft="@dimen/paddingExtraLarge"
        android:layout_marginRight="@dimen/paddingLarge"
        android:layout_marginStart="@dimen/paddingExtraLarge"
        android:layout_marginTop="@dimen/paddingLarge"
        android:textSize="@dimen/textNormal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/paddingLarge"
        android:background="@color/colorPrimary" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingExtraLarge"
        android:layout_marginRight="@dimen/paddingExtraLarge"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:textAllCaps="true"
        android:textSize="@dimen/textNormal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingExtraLarge"
        android:layout_marginRight="@dimen/paddingExtraLarge"
        android:layout_marginTop="@dimen/paddingNormal"
        android:layout_marginBottom="@dimen/paddingNormal"
        android:background="@drawable/button"
        android:onClick="sendEmail"
        android:text="@string/send_email"
        android:textSize="@dimen/textNormal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/merkel" />

</LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.begginergermanquizforthebeginnerandroiddeveloper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".question_page"
            android:label="@string/quiz"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.begginergermanquizforthebeginnerandroiddeveloper.MainActivity" />
        </activity>
        <activity
            android:name=".Summary"
            android:label="@string/Summary"
            android:parentActivityName=".question_page">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.begginergermanquizforthebeginnerandroiddeveloper.question_page" />
        </activity>
    </application>

</manifest>